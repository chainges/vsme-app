{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "bun run src/scripts/seed.ts",
    "db:seed:dev": "bun run src/scripts/seed-dev.ts",
    "db:seed:prod": "bun run src/scripts/seed-prod.ts",
    "db:reset": "bun run src/scripts/reset-db.ts",
    "db:status": "bun run src/scripts/db-status.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "hono": "^4.8.10",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.2.19",
    "@types/jsonwebtoken": "^9.0.10",
    "prisma": "^6.13.0",
    "tsdown": "^0.12.9",
    "typescript": "^5.9.2"
  }
}
